        <div class="listing">
            <%- include("../includes/subnavbar.ejs") %>
            <ul>
                <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1">
                    <% for(let list of result){ %>
                        <a href="/listing/<%= list._id %>" class="card-link">
                            <div class="card col listing-card" style="width:18rem; ">
                                <img src="<%= list.image.url %>" class="card-img-top" alt="..." style="height:21rem;">
                                <div class="card-img-overlay"></div>
                                <div class="card-body">
                                    <p class="card-text">
                                        <b>
                                            <%= list.title %>
                                        </b><br>
                                        &#8377; <%= list.price.toLocaleString("en-IN") %>/night
                                        <i class="tax-info">&nbsp;&nbsp;+ 18% GST</i>
                                    </p>
                                </div>
                            </div>
                        </a>
                        <% }%>
                </div>
            </ul>

        </div>

    </body>